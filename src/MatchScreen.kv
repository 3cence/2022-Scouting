ScreenManager: 
    MatchScreen:
    PostmatchScreen:
<Button>:
    background_color: "orange"
    background_normal: ""

<Spinner>:
    color: "black"
    background_color: "blue"
    background_normal: ""

<MatchScreen>:
    name: "match"

    teamNum: teamnum
    matchNum: matchnum

    autonHighLbl: autonhigh
    autonLowLbl: autonlow
    teleopHighLbl: teleophigh
    teleopLowLbl: teleoplow

    redTeamBtn: teamred
    blueTeamBtn: teamblue

    GridLayout:
        cols: 1
        size: root.width, root.height
        GridLayout:
            cols: 6
            TextInput:
                id: teamnum
                hint_text: "Team #"
                input_type: "number"
                font_size: 40
            TextInput:
                id: matchnum
                hint_text: "Match #"
                input_type: "number"
                font_size: 40
            Label:
                text: ""
            Label:
                text: ""
            Button:
                id: teamred
                text: "Red"
                font_size: 60
                background_color: "red"
                background_normal: ""
                on_release: root.teamSelect("red")
            Button:
                id: teamblue
                text: "Blue"
                font_size: 60
                background_color: "blue"
                background_normal: ""
                on_release: root.teamSelect("blue")
            #Auton High
            Button:
                text: "-"
                font_size: 80
                background_color: "red"
                background_normal: ""
                on_release: root.removeGoal("ah")
            GridLayout:
                cols: 1
                Label:
                    text: "Auton High"
                    size_hint_y: .2
                    font_size: 20
                Label:
                    id: autonhigh
                    text: "0" 
                    bold: True
                    font_size: 80
            Button:
                text: "+"
                font_size: 80
                background_color: "blue"
                background_normal: ""
                on_release: root.addGoal("ah")
            #Tele High
            Button:
                text: "-"
                font_size: 80
                background_color: "red"
                background_normal: ""
                on_release: root.removeGoal("th")
            GridLayout:
                cols: 1
                Label:
                    text: "Teleop High"
                    size_hint_y: .2
                    font_size: 20
                Label:
                    id: teleophigh
                    text: "0" 
                    bold: True
                    font_size: 80
            Button:
                text: "+"
                font_size: 80
                background_color: "blue"
                background_normal: ""
                on_release: root.addGoal("th")
            #Auton Low
            Button:
                text: "-"
                font_size: 80
                background_color: "red"
                background_normal: ""
                on_release: root.removeGoal("al")
            GridLayout:
                cols: 1
                Label:
                    text: "Auton Low"
                    size_hint_y: .2
                    font_size: 20
                Label:
                    id: autonlow
                    text: "0" 
                    bold: True
                    font_size: 80
            Button:
                text: "+"
                font_size: 80
                background_color: "blue"
                background_normal: ""
                on_release: root.addGoal("al")
            #Tele High
            Button:
                text: "-"
                font_size: 80
                background_color: "red"
                background_normal: ""
                on_release: root.removeGoal("tl")
            GridLayout:
                cols: 1
                Label:
                    text: "Teleop Low"
                    size_hint_y: .2
                    font_size: 20
                Label:
                    id: teleoplow
                    text: "0" 
                    bold: True
                    font_size: 80
            Button:
                text: "+"
                font_size: 80
                background_color: "blue"
                background_normal: ""
                on_release: root.addGoal("tl")
        GridLayout:
            cols: 3
            size_hint_y: .1
            Button:
                text: "Reset"
                background_color: "red"
                background_normal: ""
            Label:
                text: ""
            Button:
                text: "Next"
                background_color: "green"
                background_normal: ""
                on_release: 
                    app.root.current = "postmatch"
                    root.manager.transition.direction = "left"

#############################################################################################################################################
#################################################--POST MATCH SCREEN--#######################################################################
#############################################################################################################################################

<PostmatchScreen>:
    name: "postmatch"
    GridLayout:
        cols: 1
        size: root.width, root.height

        GridLayout:
            cols: 2
            TextInput:
                hint_text: "Additional Notes"
            GridLayout:
                cols: 1
                TextInput:
                    hint_text: "Scouter Name"
                    font_size: 50
                Label:
                    text: "Climber"
                Spinner:
                    text: "No"
                    values: "Yes", "No"
                Label:
                    text: "Sucess"
                Spinner:
                    text: "No"
                    values: "Yes", "No"
                Label:
                    text: "Level Attepted"
                Spinner:
                    text: "None"
                    values: "None", 'Low', 'Medium', 'High', "Trav"

        GridLayout:
            cols: 3
            size_hint_y: .1
            Button:
                text: "Back"
                background_color: "red"
                on_release:
                    app.root.current = "match"
                    root.manager.transition.direction = "right"
            Label:
                text: ""
            Button:
                text: "Finish"
                background_color: "green"
                on_release:
                    root.matchEnd()
                    app.root.current = "match"
                    root.manager.transition.direction = "right"
