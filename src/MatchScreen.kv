ScreenManager: 
    MatchScreen:
    PostmatchScreen:
<Button>:
    background_color: "orange"
    background_normal: ""

<Spinner>:
    color: "black"
    background_color: "yellow"
    background_normal: ""

<MatchScreen>:
    name: "match"
    GridLayout:
        cols: 1
        size: root.width, root.height
        GridLayout:
            cols: 6
            TextInput:
                hint_text: "Team #"
                font_size: 40
            TextInput:
                hint_text: "Match #"
                font_size: 40
            Label:
                text: ""
            Label:
                text: ""
            Button:
                text: "Red"
                font_size: 60
                background_color: "red"
                background_normal: ""
            Button:
                text: "Blue"
                font_size: 60
                background_color: "blue"
                background_normal: ""
            #Auton High
            Button:
                text: "-"
                font_size: 80
                background_color: "red"
                background_normal: ""
            GridLayout:
                cols: 1
                Label:
                    text: "Auton High"
                    size_hint_y: .2
                    font_size: 20
                Label:
                    text: "0" 
                    bold: True
                    font_size: 80
            Button:
                text: "+"
                font_size: 80
                background_color: "blue"
                background_normal: ""
                on_press: root.autonHighAdd()
            #Tele High
            Button:
                text: "-"
                font_size: 80
                background_color: "red"
                background_normal: ""
            GridLayout:
                cols: 1
                Label:
                    text: "Teleop High"
                    size_hint_y: .2
                    font_size: 20
                Label:
                    text: "0" 
                    bold: True
                    font_size: 80
            Button:
                text: "+"
                font_size: 80
                background_color: "blue"
                background_normal: ""
            #Auton Low
            Button:
                text: "-"
                font_size: 80
                background_color: "red"
                background_normal: ""
            GridLayout:
                cols: 1
                Label:
                    text: "Auton Low"
                    size_hint_y: .2
                    font_size: 20
                Label:
                    text: "0" 
                    bold: True
                    font_size: 80
            Button:
                text: "+"
                font_size: 80
                background_color: "blue"
                background_normal: ""
            #Tele High
            Button:
                text: "-"
                font_size: 80
                background_color: "red"
                background_normal: ""
            GridLayout:
                cols: 1
                Label:
                    text: "Teleop Low"
                    size_hint_y: .2
                    font_size: 20
                Label:
                    text: "0" 
                    bold: True
                    font_size: 80
            Button:
                text: "+"
                font_size: 80
                background_color: "blue"
                background_normal: ""
        GridLayout:
            cols: 3
            size_hint_y: .1
            Button:
                text: "Reset"
                background_color: "red"
                background_normal: ""
            Label:
                text: ""
            Button:
                text: "Next"
                background_color: "green"
                background_normal: ""
                on_release: 
                    app.root.current = "postmatch"
                    root.manager.transition.direction = "left"

#############################################################################################################################################
#################################################--POST MATCH SCREEN--#######################################################################
#############################################################################################################################################

<PostmatchScreen>:
    name: "postmatch"
    GridLayout:
        cols: 1
        size: root.width, root.height

        GridLayout:
            cols: 2
            TextInput:
                hint_text: "Additional Notes"
            GridLayout:
                cols: 1
                TextInput:
                    hint_text: "Scouter Name"
                    font_size: 50
                Label:
                    text: "Climber"
                Spinner:
                    text: "No"
                    values: "Yes", "No"
                Label:
                    text: "Sucess"
                Spinner:
                    text: "No"
                    values: "Yes", "No"
                Label:
                    text: "Level Attepted"
                Spinner:
                    text: "None"
                    values: "None", 'Low', 'Medium', 'High', "Trav"

        GridLayout:
            cols: 3
            size_hint_y: .1
            Button:
                text: "Back"
                background_color: "red"
                on_release:
                    app.root.current = "match"
                    root.manager.transition.direction = "right"
            Label:
                text: ""
            Button:
                text: "Finish"
                background_color: "green"
